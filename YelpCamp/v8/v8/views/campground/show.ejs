<%- include("../partial/header")%>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<div class="list-group">
			  <a href="#" class="list-group-item active">
				Info
			  </a>
			  <a href="#" class="list-group-item">Info</a>
			  <a href="#" class="list-group-item">Info</a>
		</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<p><img class="img-responsive" src="<%=foundCampground.image%>"></p>
				<div class="caption-full">
					<h4 class="pull-right">$<%=foundCampground.price%></h4>
					<h4><a href=""><%=foundCampground.name%></a></h4>
				    <p><%=foundCampground.description%></p>
					<p>
						submitted by <em><%=foundCampground.author.username%></em>
					</p>
				<%if(currentUser&&foundCampground.author.id.equals(currentUser._id)){%>
					<a class="btn btn-warning"href="/campgrounds/<%=foundCampground._id%>/edit">EDIT</a>
					<form class="delete-form" action="/campgrounds/<%=foundCampground._id%>?_method=DELETE" method="POST">
						<button class="btn btn-danger">Delete</button>
					</form>
				<%}%>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/campgrounds/<%=foundCampground._id%>/comments/new">Add New Comments</a>
				</div>
			<hr>
		<div class="row">
		<div class="col-md-12">
		<%foundCampground.comments.forEach(function(comment){%>
		<strong><%=comment.author.username%></strong>
		<span class="pull-right">9 days ago</span>
		<p>  
		  <%=comment.content%>
        </p>
		<%if(currentUser&&comment.author.id.equals(currentUser._id)){%>
		  <a class="btn btn-xs btn-warning" href="/campgrounds/<%=foundCampground._id%>/comments/<%=comment._id%>/edit">edit</a>
		<form class="delete-form" action="/campgrounds/<%=foundCampground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
		<button class="btn btn-danger btn-xs">Delete</button>
		</form>
		<%}%>
		</div>
	</div>
	<%})%>
	    </div>	
	</div>	
  </div>
</div>

<%- include("../partial/footer")%>
